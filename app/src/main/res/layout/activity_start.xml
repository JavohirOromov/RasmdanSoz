<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.start.StartActivity"
    android:orientation="vertical"
    android:background="#04202E"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:src="@drawable/img"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_1"
            android:text="Yangi o'yin"
            android:textSize="18sp"
            android:fontFamily="@font/prototype"
            android:textColor="#161519"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resume"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_1"
           android:layout_marginTop="12dp"
            android:text="davom etish"
            android:textSize="18sp"
            android:fontFamily="@font/prototype"
            android:textColor="#161519"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_1"
            android:fontFamily="@font/prototype"
            android:text="Ma'lumot"
            android:textColor="#161519"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quit"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_1"
            android:layout_marginVertical="12dp"
            android:text="chiqish"
            android:textSize="18sp"
            android:fontFamily="@font/prototype"
            android:textColor="#161519"
            />
    </LinearLayout>


</LinearLayout>