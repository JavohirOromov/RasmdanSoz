<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.last.LastActivity"
    android:orientation="vertical"
    android:background="#04202E"
    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:src="@drawable/medal"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siz barcha darajalarni tugatdingiz"
        android:textStyle="bold"
        android:fontFamily="@font/prototype"
        android:textSize="36sp"
        android:textColor="#FFEB3B"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart_button"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_last"
        android:fontFamily="@font/prototype"
        android:text="Qayta boshlash"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu_button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_last"
        android:text="Menyu"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/prototype"
        android:layout_gravity="center"
        />

</LinearLayout>
</LinearLayout>